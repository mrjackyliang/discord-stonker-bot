{
    "env": {
        "es2020": true,
        "jasmine": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:import/typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "ts": "never",
                "d.ts": "never"
            }
        ],
        "max-len": [
            "off"
        ],
        "no-console": [
            "off"
        ]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".ts", ".d.ts"]
            }
        }
    }
}
